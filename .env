// src/config/env.js
import 'dotenv/config';

// Puerto (Render te inyecta PORT)
export const PORT = Number(process.env.PORT || 3001);

// Soporte para 1 o varios orígenes CORS (separados por coma)
const origins =
  (process.env.CORS_ORIGIN || process.env.CLIENT_ORIGIN || 'http://localhost:5173,https://monraspgit.github.io')
    .split(',')
    .map(s => s.trim())
    .filter(Boolean);

export const CORS_ORIGINS = origins;   // array usable en app.js
export const CLIENT_ORIGIN = origins[0]; // compat si tu app.js usa uno solo

// Config DB (con SSL opcional por env)
export const DB = {
  host: process.env.DB_HOST,
  port: Number(process.env.DB_PORT || 3306),
  user: process.env.DB_USER,
  password: process.env.DB_PASSWORD,
  database: process.env.DB_NAME,
  // Activá SSL poniendo DB_SSL=1|true|yes (si tu proveedor lo requiere)
  ssl: /^(1|true|yes)$/i.test(process.env.DB_SSL || '') ? { rejectUnauthorized: false } : undefined,
};
